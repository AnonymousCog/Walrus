<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/departureAirportCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newFlightTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="@string/Departure_Airport_Code"
        android:inputType="textCapWords"
        android:text="tjsj" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/DestinationAirportCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/departureAirportCode"
        android:layout_below="@+id/departureAirportCode"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:hint="@string/Destination_Airport_Code"
        android:inputType="textCapWords"
        android:text="tjmz" />

    <Button
        android:id="@+id/SubmitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:onClick="submitPressed"
        android:text="@string/Submit" />

    <TextView
        android:id="@+id/newFlightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="@string/Create_A_New_Flight"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>